<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimaryLight"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_back"
            android:backgroundTint="#F3F3F3"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:id="@+id/ib_back"/>
        <TextView
            android:id="@+id/tv_checking"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:text="책에 대한 상세 정보"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:src="@mipmap/ic_book" />

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/book_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="28dp"
                    android:textColor="#000000"
                    android:id="@+id/tv_title"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Author"
                    android:textSize="20dp"
                    android:id="@+id/tv_author"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publisher"
                    android:textSize="20dp"
                    android:id="@+id/tv_publisher"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ISBN"
                    android:textSize="20dp"
                    android:id="@+id/tv_ISBN"/>
            </LinearLayout>

                <RatingBar
                    android:id="@+id/book_ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:isIndicator="true"
                    android:clickable="false"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1"/>

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow
                android:layout_width="0dp">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">
                    <RelativeLayout
                        android:id="@+id/tv_borrowed_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp">
                        <TextView
                            android:id="@+id/tv_borrowed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="4dp"
                            android:text="Book owner"
                            android:textSize="20dp"
                            android:textColor="#000000" />
                        <TextView
                            android:id="@+id/tv_owner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="dufo7070@naver.com"
                            android:textSize="16dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/tv_borrowed"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/tv_purchased_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@id/tv_borrowed_box">
                        <TextView
                            android:id="@+id/tv_purchased"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="4dp"
                            android:text="Status"
                            android:textSize="20dp"
                            android:textColor="#000000" />
                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Available"
                            android:textSize="16dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/tv_purchased"/>
                    </RelativeLayout>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow
                android:id="@+id/tv_borrow"
                android:layout_height="0dp"
                android:clickable="true">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="16dp">
                    <TextView
                        android:id="@+id/tv_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text="Send borrow request"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_arrow"
                        android:layout_marginRight="4dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:id="@+id/tv_show"
                android:layout_height="0dp"
                android:clickable="true">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text="Show more information"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_arrow"
                        android:layout_marginRight="4dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:id="@+id/tv_reserve"
                android:layout_height="0dp"
                android:clickable="true">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text="Make reservation"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_arrow"
                        android:layout_marginRight="4dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>