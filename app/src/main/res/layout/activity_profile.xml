<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/actionbar_profile"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="0dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow
            android:id="@+id/profile_row"
            android:layout_width="0dp"
            android:clickable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_centerVertical="true"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@mipmap/ic_profile"/>
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_header_title"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/profile_image"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="@string/nav_header_subtitle"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:layout_below="@+id/profile_name"/>
            </RelativeLayout>
        </TableRow>
        <TableRow
            android:id="@+id/location_row"
            android:layout_width="0dp"
            android:clickable="true">
            <RelativeLayout
                android:layout_margin="16dp">
                <TextView
                    android:id="@+id/profile_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Library Location"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="KAIST, Daehak-ro 291, Daejeon"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@+id/profile_location" />
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </TableRow>
        <TableRow
            android:layout_width="0dp">
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">
            <RelativeLayout
                android:id="@+id/book_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/profile_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="Added "
                    android:textSize="20dp"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="0"
                    android:textSize="24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/profile_book"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/borrowed_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/book_box">
                <TextView
                    android:id="@+id/profile_borrowed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="Borrowed"
                    android:textSize="20dp"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="0"
                    android:textSize="24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/profile_borrowed"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/purchased_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/borrowed_box">
                <TextView
                    android:id="@+id/profile_purchased"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="Purchased"
                    android:textSize="20dp"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="0"
                    android:textSize="24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/profile_purchased"/>
            </RelativeLayout>
            </RelativeLayout>
        </TableRow>
    </TableLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/profile_goto"
                    android:layout_height="0dp"
                    android:clickable="true">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:text="Go to My Library"
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_arrow"
                            android:layout_marginRight="4dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </TableRow>
            </TableLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/profile_signout"
                    android:layout_height="0dp"
                    android:clickable="true">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:text="Sign Out"
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_arrow"
                            android:layout_marginRight="4dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </TableRow>
            </TableLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>